# Navigation
alias ..="cd .."

# Time management
alias week='date +%V'
alias timer='echo "Timer started. Stop with CTRL-D." && date && time cat && date'

# Generic aliases
alias python=python3
alias pip=pip3

alias pv=pipenv
alias pvi="pipenv install"
alias pvu="pipenv uninstall"

# Shortcuts
bindkey "^[[1;5D" backward-word
bindkey "^[[1;5C" forward-word